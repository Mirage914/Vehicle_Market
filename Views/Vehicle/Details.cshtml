@model Project1.Models.VehicleView_Model

@{
    ViewData["Title"] = "Details";
}
<html>
<head>
    <link rel="stylesheet" href="~/css/Vehicle.css">
    <link rel="stylesheet" href="~/css/ModalImage.css">

</head>
<body>
    <div>
        <h1> @Html.DisplayFor(model => model.CarBrand)  @Html.DisplayFor(model => model.CarModel)</h1>
        <img class="imgDetails" id="myImg" src="~/Images/@Html.DisplayFor(model => model.ImageName)" alt="@Html.DisplayFor(model => model.CarBrand)  @Html.DisplayFor(model => model.CarModel)" />
        <div id="myModal" class="modal">
            <span class="close">&times;</span>
            <img class="modal-content" id="img01">
            <div id="caption"></div>
        </div>
        <hr />
        <dl class="row">
            <dt class="col-sm-2">
                <p>Vehicle</p>
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.CarBrand)
            </dd>
            <dt class="col-sm-2">
                <p>Model</p>
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.CarModel)
            </dd>
            <dt class="col-sm-2">
                <p>Production Date</p>
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.ProductionDate)
            </dd>
            <dt class="col-sm-2">
                Price
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Price)$
            </dd>
        </dl>
    </div>
    <div>
        <a asp-action="Edit" asp-route-id="@Model.ID">Edit</a> |
        <a asp-action="Index">Back to List</a>
    </div>
    <script src="~/js/Modal.js"></script>
</body>
</html>