@model Project1.Models.VehicleView_Model

@{
    ViewData["Title"] = "Details";
}
<html>
<head>
    <link rel="stylesheet" href="~/css/Vehicle.css">
    <link rel="stylesheet" href="~/css/ModalImage.css">
    <link rel="stylesheet" href="~/css/Form.css">
</head>
<body>
    <div class="form">
        <div>
            <img class="imgDetails" id="myImg" src="~/Images/@Html.DisplayFor(model => model.ImageName)" alt="@Html.DisplayFor(model => model.CarBrand)  @Html.DisplayFor(model => model.CarModel)" />
            <div id="myModal" class="modal">
                <span class="close">&times;</span>
                <img class="modal-content" id="img01">
                <div id="caption"></div>
            </div>
            <div class="title">@Html.DisplayFor(model => model.CarBrand) @Html.DisplayFor(model => model.CarModel)</div>
            <hr />
            <div>
                <dl style="text-align:center;">
                    <dt style="color: #333;">Brand</dt>
                    <dd style="color:white;font-size:20px;">@Html.DisplayFor(model => model.CarBrand)</dd>
                    <dt style="color: #333;">Model</dt>
                    <dd style="color:white;font-size:20px;">@Html.DisplayFor(model => model.CarModel)</dd>
                    <dt style="color: #333;">Price</dt>
                    <dd style="color:white;font-size:20px;">@Html.DisplayFor(model => model.Price) €</dd>
                    <dt style="color: #333;">Production Date</dt>
                    <dd style="color:white;font-size:20px;">@Html.DisplayFor(model => model.ProductionDate) </dd>
                </dl>
            </div>
            <a class="btn btn-primary" style="margin-left:20px;" asp-action="Edit" asp-route-id="@Model.ID">Edit</a>
            <a class="btn btn-primary" asp-action="Index" style="margin-left:300px;">Back to list</a>
        </div>
    </div>
    <script src="~/js/Modal.js"></script>
</body>
</html>