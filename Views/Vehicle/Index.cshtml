@model IEnumerable<Project1.Models.Vehicle>

@{
    ViewData["Title"] = "Index";
}
<html>
<head>
    <link rel="stylesheet" href="~/css/Vehicle.css">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="stylesheet" href="https://code.jquery.com/mobile/1.4.5/jquery.mobile-1.4.5.min.css">
</head>
<body>
    <h1 style="padding-bottom:20px;">Vehicle</h1>
    <div>
        <form asp-action="Index" method="get" style="text-align:left;">
            <div style="padding-bottom:5px">
                <p style="text-align:right;">
                    <input type="text" size="25" placeholder="Search.." name="SearchString" value="@ViewData["CurrentFilter"]" />
                    <input type="submit" value="Search" class="btn btn-primary" /> |
                    <a style="padding-right:75px" asp-action="Index">Back to Full List</a>
                    <a style="padding-right:255px" asp-action="Index" asp-route-sortOrder="@ViewData["NameSort"]">A-Z</a>
                    <input class="inputSize" type="number" placeholder="Max price" name="MaxPrice" value="@ViewData["Max"]" />
                    <input class="inputSize" type="number" placeholder="Min price" name="MinPrice" value="@ViewData["Min"]" />
                    <input style="margin-right:10px;" type="submit" value="Filter" class="btn btn-primary" />
                </p>
            </div>
        </form>
    </div>
    <div class="container">
        <div class="row">
            @foreach (var item in Model)
            {
                <div class="col col-lg-3 col-md-4 col-sm-6">
                    <div class="card mb-2">
                        <img class="card card-img-top" src="~/Images/@Html.DisplayFor(modelItem => item.ImageName)" alt=@Html.DisplayFor(modelItem => item.ImageName) />
                        <a asp-action="Details" asp-route-id="@item.ID">
                            <p style="font-size: 16px;">
                                @Html.DisplayFor(modelItem => item.CarBrand) @Html.DisplayFor(modelItem => item.CarModel)
                            </p>
                            <p style="font-weight: bold; font-size:18px">@Html.DisplayFor(modelItem => item.Price) €</p>
                            <p align="right" style="font-size:12px">@Html.DisplayFor(modelItem => item.ProductionDate)</p>
                        </a>
                    </div>
                </div>
            }
        </div>
    </div>

    <button class="btn" onclick="topFunction()" id="myBtn" title="Go to top"><i class='fas fa-angle-double-up' style="color:dimgray"></i></button>
    <script src="~/js/UpButton.js"></script>
    <script src='https://kit.fontawesome.com/a076d05399.js' crossorigin='anonymous'></script>
</body>
</html>





