@model IEnumerable<Project1.Models.Vehicle>

@{
    ViewData["Title"] = "Index";
}
<html>
<head>
    <link rel="stylesheet" href="~/css/Vehicle.css">
</head>
<body>
    <h1>Vehicle</h1>
    <a asp-action="Index" asp-route-sortOrder="@ViewData["NameSort"]">@Html.DisplayNameFor(model => model.CarBrand)</a>
    <form asp-action="Index" method="get">
        <div class="form-actions no-color">
            <p>
                <input type="text" placeholder="Search.." name="SearchString" value="@ViewData["CurrentFilter"]" />
                <input type="submit" value="Search" class="btn btn-light" /> |
                <a asp-action="Index">Back to Full List</a>
            </p>
        </div>
    </form>
    <div class="row">
        @foreach (var item in Model)
        {
            <div class="column">
                <div class="container">
                    <div class="card">
                        <img class="card card-img-top" src="~/Images/@Html.DisplayFor(modelItem => item.ImageName)" alt=@Html.DisplayFor(modelItem => item.ImageName) />
                        <a asp-action="Details" asp-route-id="@item.ID">
                            <p style="font-size: 16px;">
                                @Html.DisplayFor(modelItem => item.CarBrand) @Html.DisplayFor(modelItem => item.CarModel)
                            </p>
                            <p style="font-weight: bold; font-size:18px">@Html.DisplayFor(modelItem => item.Price)$</p>
                            <p align="right" style="font-size:12px">@Html.DisplayFor(modelItem => item.ProductionDate)</p>
                        </a>
                    </div>
                </div>
            </div>
        }
    </div>
</body>
</html>




