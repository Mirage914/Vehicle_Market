@model Project1.Models.VehicleView_Model
@{
    ViewData["Title"] = "Edit";


}
<html>
<head>
    <link rel="stylesheet" href="~/css/Vehicle.css">
    <link rel="stylesheet" href="~/css/Form.css">
</head>
<body>
    <div class="form">
        <div class="title">Edit your car</div>
        <form asp-action="Edit" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="ID" />
            <img class="imgDetails" src="~/Images/@Html.DisplayFor(model=> model.ImageName)">
            <hr />
            <div class="form-group">
                <label asp-for="CarBrand" class="control-label">Vehicle Brand</label>
                <input style="width:450px;margin:auto;" asp-for="CarBrand" class="form-control" />
                <span asp-validation-for="CarBrand" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CarModel" class="control-label">Vehicle Model</label>
                <input style="width:450px;margin:auto;" asp-for="CarModel" class="form-control" />
                <span asp-validation-for="CarModel" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ProductionDate" class="control-label">Production Date</label>
                <input style="width:450px;margin:auto;" asp-for="ProductionDate" type="date" class="form-control" />
                <span asp-validation-for="ProductionDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Price" class="control-label"></label>
                <input style="width:450px;margin:auto;" asp-for="Price" class="form-control" />
                <span asp-validation-for="Price" class="text-danger"></span>
            </div>
            <div hidden class="form-group">
                <label asp-for="ImageName" class="control-label"></label>
                <input style="width:450px;margin:auto;" asp-for="ImageName" class="form-control" />
                <span asp-validation-for="ImageName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input style="width:450px;margin:auto;" asp-for="Image" type="file" />
            </div>
            <div class="form-group">
                <input type="submit" style="margin-left:20px" value="Save" class="btn btn-primary" />
                <button type="button" class="btn btn-danger" data-toggle="modal" data-target="#exampleModal">
                    Delete
                </button>
            </div>
            <a style="text-align:right;" asp-action="Index">Back to List</a>
        </form>
    </div>
    @*Modal for Delete*@
    <div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="exampleModalLabel">Delete Vehicle</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    <p>Are you sure you want to delete this vehicle?</p>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                    <form asp-action="Delete">
                        <input type="hidden" asp-for="ID" />
                        <input type="submit" value="Delete" class="btn btn-danger" />
                    </form>
                </div>
            </div>
        </div>
    </div>
</body>
</html>



@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
