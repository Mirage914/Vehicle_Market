@model Project1.Models.Account

@{
    ViewData["Title"] = "Register";
}

<h1>Register Account</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-controller="Account" asp-action="Index">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="UserName" class="control-label">Username</label>
                <input asp-for="UserName"  placeholder="Enter Username" class="form-control" />
                <span asp-validation-for="UserName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Password" class="control-label"></label>
                <input asp-for="Password"  placeholder="Enter Password" class="form-control" type="password" />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Register" class="btn btn-primary" asp-action="Register" />
            </div>
        </form>
    </div>
</div>



